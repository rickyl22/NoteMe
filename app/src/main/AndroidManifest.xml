<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ricardo.noteme">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher2"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.ricardo.noteme.NewListActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name="com.ricardo.noteme.NewWordActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.ricardo.noteme.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.ricardo.noteme.AlarmReceiver"
            android:process=":remote" />
    </application>

</manifest>